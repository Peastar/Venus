{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    //    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    //    "declaration": true,
    //    "removeComments": true,
    //    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
